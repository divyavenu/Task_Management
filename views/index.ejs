<html>
  <head>
    <title>My Task Management App!</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angApp.js"></script>
  </head>
  <body ng-app="taskMan" ng-controller="MainCtrl">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <ui-view></ui-view> 
    </div>
  </div>

  <script type="text/ng-template" id="/home.html">
    <div class="page-header">
      <h1>Task Manager</h1>
    </div>

    <div ng-repeat="task in tasks">
      <span style="font-size:20px; margin-left:10px;">
        {{task.title}}
      </span>
      <span>
        <a href="#/tasks/{{$index}}">Details</a>
      </span>
    </div>

    <form ng-submit = "addTask()"
      style="margin-top:30px;">
        <h3>Add a new Task</h3>

        <div class="form-group">
          <input type="text"
            class="form-control"
            placeholder="Title"
            ng-model="title"></input>
        </div>

        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Description"
          ng-model="description"></input>
        </div>

        <div class="form-group">
          <div class="dropdown">
            <a class="dropdown-toggle" id="dropdown2" role="button" data-toggle="dropdown" data-target="#" href="#">
              <div class="input-group"><input type="text" class="form-control" data-ng-model="data.dateDropDownInput"><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
              </div>
            </a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
              <datetimepicker data-ng-model="data.dateDropDownInput" data-datetimepicker-config="{ dropdownSelector: '#dropdown2' }"/>
            </ul>
          </div>
        </div>

        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Priority"
          ng-model="priority"></input>
        </div>
      <button type="submit" class="btn btn-primary">Add</button>
    </form>
</script>
<script type="text/ng-template" id="/tasks.html">
  <div class="page-header">
    <h2>
        {{task.title}}
    </h2>
  </div>
  <div class="row">
  <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8">
    <div class="panel panel-default">
      <div class="panel-heading resume-heading">
        <div class="row">
          <div class="col-lg-8">
            <ul class="list-group">
              <li class="list-group-item">{{task.title}}</li>
              <li class="list-group-item"> {{task.description}}</li>
              <li class="list-group-item">{{task.date}} </li>
              <li class="list-group-item">{{task.priority}} </li>
            </ul>
          </div>
        </div>
      </div>

</script>
</body>
</html>